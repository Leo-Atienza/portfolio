<!doctype html>
<html data-theme="cupcake">
<head>
  <meta charset="utf-8" />
  <title><%= title %> · Portfolio</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Ways to contact Leo Atienza — email, LinkedIn, GitHub." />
  <link rel="icon" href="/favicon.ico" />

  <!-- Open Graph -->
  <meta property="og:title" content="Contact · Leo Atienza" />
  <meta property="og:description" content="Email, LinkedIn, and GitHub links." />

  <link rel="stylesheet" href="/css/main.css?v=<%= assetVersion %>" />
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-10">
    <section class="max-w-3xl">
      <h1 class="text-3xl font-bold mb-6">Contact</h1>

      <div class="grid gap-6 sm:grid-cols-2">
        <!-- Email via Gmail Compose (opens in new tab) -->
        <a class="card bg-base-100 shadow-md hover:shadow-lg transition"
           href="https://mail.google.com/mail/u/0/#inbox?compose=CllgCJqZhfdlfstgBSGTnkLkWkPrmGpgNgvSVfHGbWzTgrqxxJkFhVWgFpxHLmjNNZKXHGRjQmL"
           target="_blank" rel="noopener noreferrer">
          <div class="card-body">
            <h2 class="card-title">Email</h2>
            <p>Compose an email to me in Gmail</p>
          </div>
        </a>

        <% if (contacts && contacts.linkedin) { %>
          <a class="card bg-base-100 shadow-md hover:shadow-lg transition"
             href="<%= contacts.linkedin %>" target="_blank" rel="noopener noreferrer">
            <div class="card-body">
              <h2 class="card-title">LinkedIn</h2>
              <p>Connect with me on LinkedIn</p>
            </div>
          </a>
        <% } %>

        <% if (contacts && contacts.github) { %>
          <a class="card bg-base-100 shadow-md hover:shadow-lg transition"
             href="<%= contacts.github %>" target="_blank" rel="noopener noreferrer">
            <div class="card-body">
              <h2 class="card-title">GitHub</h2>
              <p>See my code and projects</p>
            </div>
          </a>
        <% } %>
      </div>

      <% if (!contacts?.linkedin && !contacts?.github) { %>
        <p class="mt-6 opacity-70 text-sm">
          Tip: add <code>LINKEDIN_URL</code> and <code>GITHUB_URL</code> to your <code>.env</code> to show more cards here.
        </p>
      <% } %>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>