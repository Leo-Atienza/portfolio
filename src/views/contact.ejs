<!doctype html>
<html data-theme="cupcake">
<head>
  <meta charset="utf-8" />
  <title><%= title %> · Portfolio</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Ways to contact Leo Atienza — email, LinkedIn, GitHub." />
  <link rel="icon" href="/favicon.ico" />
  <meta property="og:title" content="Contact · Leo Atienza" />
  <meta property="og:description" content="Email, LinkedIn, and GitHub links." />
  <link rel="stylesheet" href="/css/main.css<% if (typeof assetVersion !== 'undefined') { %>?v=<%= assetVersion %><% } %>" />
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-10">
    <section class="max-w-3xl">
      <h1 class="text-3xl font-bold mb-6">Contact</h1>

      <div class="grid gap-6 sm:grid-cols-2">
        <!-- Email (Gmail compose; lighter red) -->
        <a class="card text-white hover:brightness-110 transition"
           style="background-color: rgba(234, 67, 53, 0.85);"
           href="https://mail.google.com/mail/u/0/#inbox?compose=CllgCJZWPVrJKGnMQxspCXsCcsGZbjqsvSZlMPzVVVtqsHxnBXhQCFvdxnsnLGTPjgQNDtKNrLV"
           target="_blank" rel="noopener noreferrer">
          <div class="card-body">
            <h2 class="card-title">Email</h2>
            <p>leooatienza@gmail.com</p>
          </div>
        </a>

        <% if (contacts && contacts.linkedin) { %>
          <!-- LinkedIn (lighter blue) -->
          <a class="card text-white hover:brightness-110 transition"
             style="background-color: rgba(10, 102, 194, 0.85);"
             href="<%= contacts.linkedin %>" target="_blank" rel="noopener noreferrer">
            <div class="card-body">
              <h2 class="card-title">LinkedIn</h2>
              <p>Connect with me on LinkedIn</p>
            </div>
          </a>
        <% } %>

        <% if (contacts && contacts.github) { %>
          <!-- GitHub (lighter black) -->
          <a class="card text-white hover:brightness-110 transition"
             style="background-color: rgba(36, 41, 46, 0.88);"
             href="<%= contacts.github %>" target="_blank" rel="noopener noreferrer">
            <div class="card-body">
              <h2 class="card-title">GitHub</h2>
              <p>Browse my projects and code</p>
            </div>
          </a>
        <% } %>
      </div>

      <% if (!contacts?.linkedin && !contacts?.github) { %>
        <p class="mt-6 opacity-70 text-sm">
          Tip: add <code>LINKEDIN_URL</code> and <code>GITHUB_URL</code> to your <code>.env</code> to show more cards here.
        </p>
      <% } %>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
