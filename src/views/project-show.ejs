<!doctype html>
<html data-theme="cupcake">
<head>
  <meta charset="utf-8" />
  <title><%= title %> · Portfolio</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="<%= project.summary || 'Project details and links.' %>" />
  <link rel="icon" href="/favicon.ico" />
  <meta property="og:title" content="<%= project.title %> · Leo Atienza" />
  <meta property="og:description" content="<%= project.summary || 'Project details and links.' %>" />
  <link rel="stylesheet" href="/css/main.css<% if (typeof assetVersion !== 'undefined') { %>?v=<%= assetVersion %><% } %>" />
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-10">
    <article class="prose max-w-none">
      <h1 class="mb-2"><%= project.title %></h1>
      <% if (project.Category) { %><p class="opacity-70"><%= project.Category.name %></p><% } %>

      <% if (project.summary) { %><p><%= project.summary %></p><% } %>
      <% if (project.description) { %><div><%- project.description %></div><% } %>

      <% if (project.techStack || project.tools) { %>
        <section class="mb-6">
          <h2 class="text-xl font-semibold mb-2">Stack & Tools</h2>
          <div class="flex flex-wrap gap-2">
            <% if (project.techStack) { %>
              <% ('' + project.techStack).split(',').map(s => s.trim()).filter(Boolean).forEach(s => { %>
                <span class="badge badge-neutral tech-badge"><%= s %></span>
              <% }) %>
            <% } %>
            <% if (project.tools) { %>
              <% ('' + project.tools).split(',').map(s => s.trim()).filter(Boolean).forEach(s => { %>
                <span class="badge badge-neutral tech-badge"><%= s %></span>
              <% }) %>
            <% } %>
          </div>
        </section>
      <% } %>

      <div class="flex gap-3">
        <% if (project.liveUrl) { %>
          <a class="btn btn-primary" href="<%= project.liveUrl %>" target="_blank" rel="noopener noreferrer">Live</a>
        <% } %>
        <% if (project.repoUrl) { %>
          <a class="btn btn-ghost" href="<%= project.repoUrl %>" target="_blank" rel="noopener noreferrer">Repo</a>
        <% } %>
      </div>
    </article>
  </main>

  <%- include('partials/footer') %>
</body>
</html>