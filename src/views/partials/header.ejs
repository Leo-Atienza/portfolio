<header class="sticky top-0 z-50 backdrop-blur bg-base-100/95 border-b border-base-300">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center h-16 w-full">
      <!-- LEFT: Brand -->
      <a href="/" class="text-lg md:text-xl font-extrabold btn btn-ghost px-2 normal-case">
        Leo Atienza
      </a>

      <!-- CENTER: Menu -->
      <nav class="flex-1 flex justify-center">
        <ul class="flex items-center gap-6 md:gap-8 whitespace-nowrap text-[15px] md:text-base font-medium">
          <li><a class="px-2 py-1 rounded-md no-underline hover:underline underline-offset-4 decoration-2" href="/">Home</a></li>
          <li><a class="px-2 py-1 rounded-md no-underline hover:underline underline-offset-4 decoration-2" href="/about">About</a></li>
          <li><a class="px-2 py-1 rounded-md no-underline hover:underline underline-offset-4 decoration-2" href="/projects">Projects</a></li>
          <li><a class="px-2 py-1 rounded-md no-underline hover:underline underline-offset-4 decoration-2" href="/education">Education</a></li>
          <li><a class="px-2 py-1 rounded-md no-underline hover:underline underline-offset-4 decoration-2" href="/experience">Experience</a></li>
          <li><a class="px-2 py-1 rounded-md no-underline hover:underline underline-offset-4 decoration-2" href="/certifications">Certifications</a></li>
          <li><a class="px-2 py-1 rounded-md no-underline hover:underline underline-offset-4 decoration-2" href="/contact">Contact</a></li>
        </ul>
      </nav>

      <!-- RIGHT: Light/Dark toggle -->
      <button id="themeBtn" class="ml-auto btn btn-ghost btn-circle" aria-label="Toggle theme" title="Toggle theme">
        <span id="themeIcon" class="text-2xl leading-none">🌙</span>
      </button>
    </div>
  </div>

  <script>
    (function () {
      const themes = { light: 'cupcake', dark: 'business' };
      const root   = document.documentElement;
      const btn    = document.getElementById('themeBtn');
      const icon   = document.getElementById('themeIcon');
      const saved  = localStorage.getItem('theme') || themes.light;
      root.setAttribute('data-theme', saved);
      icon.textContent = (saved === themes.dark) ? '☀️' : '🌙';

      btn?.addEventListener('click', () => {
        const current = root.getAttribute('data-theme') || themes.light;
        const next = (current === themes.dark) ? themes.light : themes.dark;
        root.setAttribute('data-theme', next);
        localStorage.setItem('theme', next);
        icon.textContent = (next === themes.dark) ? '☀️' : '🌙';
      });

      const here = (location.pathname.replace(/\/+$/, '') || '/');
      document.querySelectorAll('nav a').forEach(a => {
        const href = (a.getAttribute('href') || '#').replace(/\/+$/, '') || '/';
        if (href === here) {
          a.setAttribute('aria-current', 'page');
          a.classList.add('text-primary','font-semibold','border-b-2','border-current');
        }
      });
    })();
  </script>
</header>
