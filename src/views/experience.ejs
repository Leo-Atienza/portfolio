<!doctype html>
<html data-theme="cupcake">
<head>
  <meta charset="utf-8" />
  <title><%= title %> · Portfolio</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Professional experience and roles." />
  <link rel="icon" href="/favicon.ico" />
  <link rel="stylesheet" href="/css/main.css?v=<%= assetVersion %>" />
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">Experience</h1>

    <% if (roles && roles.length) { %>
      <div class="space-y-6">
        <% roles.forEach(r => { %>
          <article class="card bg-base-100 shadow-md">
            <div class="card-body">
              <h2 class="card-title"><%= r.title %></h2>
              <p class="opacity-80"><%= [r.company, r.location].filter(Boolean).join(' · ') %></p>
              <p class="text-sm opacity-70"><%= [r.start, r.end].filter(Boolean).join(' — ') %></p>

              <% if (Array.isArray(r.bullets) && r.bullets.length) { %>
                <ul class="list-disc ml-5 mt-2">
                  <% r.bullets.forEach(b => { %><li><%= b %></li><% }) %>
                </ul>
              <% } %>
            </div>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <p class="opacity-70">No experience items yet. Add them in <code>portfolioController.getExperience()</code>.</p>
    <% } %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>