<%- include('partials/header') %>

<main class="max-w-7xl mx-auto px-4 py-10">

<!-- BIG HERO -->
<section
  class="w-full rounded-3xl bg-base-200 border border-base-300 text-center"
  style="padding: 6rem 3rem;"  
>
  <h1
    class="font-extrabold tracking-tight"
    style="font-size: clamp(2.5rem, 4vw + 1rem, 3.75rem); line-height: 1.1;"
  >
    Hi, I'm Leo <span aria-hidden="true">ðŸ‘‹</span>
  </h1>

  <p class="opacity-80" style="max-width: 48rem; margin: 1rem auto 0;">
    An IT student aspiring to tackle both IT Service Management and Software Engineering.
  </p>

  <div class="flex items-center justify-center gap-3" style="margin-top: 1.25rem;">
    <a href="/projects" class="btn btn-primary rounded-full px-6">Projects</a>
    <a href="/about" class="btn btn-outline rounded-full px-6">About me</a>
  </div>
</section>

<!-- EXTRA SPACE under the hero -->
<div style="height: 64px;"></div>   <!-- change 64px to 48/80/etc to taste -->

<!-- RECENT PROJECTS -->
<section>
  <h2 class="text-xl font-semibold mb-4">Recent Projects</h2>
  <% if (typeof recent !== 'undefined' && recent && recent.length) { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% recent.forEach(project => { %>
        <div class="card bg-base-100 rounded-2xl ring-1 ring-base-200/70 hover:ring-primary/60 shadow-sm hover:shadow-lg transition duration-200 hover:-translate-y-0.5">
          <div class="card-body space-y-3">
            <h3 class="card-title text-base-content/90 text-lg">
              <a href="/projects/<%= project.slug %>"><%= project.title %></a>
            </h3>

            <% if (project.summary) { %>
              <p class="text-sm opacity-80"><%= project.summary %></p>
            <% } %>

            <div class="flex flex-wrap gap-2">
              <% (project.techStack || '').split(',').map(s=>s.trim()).filter(Boolean).forEach(s=>{ %>
                <span class="badge badge-outline"><%= s %></span>
              <% }) %>
              <% (project.tools || '').split(',').map(s=>s.trim()).filter(Boolean).forEach(s=>{ %>
                <span class="badge badge-ghost"><%= s %></span>
              <% }) %>
            </div>

            <div class="card-actions justify-end">
              <% if (project.liveUrl) { %>
                <a class="btn btn-sm btn-primary" href="<%= project.liveUrl %>" target="_blank" rel="noopener">Live</a>
              <% } %>
              <% if (project.repoUrl) { %>
                <a class="btn btn-sm btn-outline" href="<%= project.repoUrl %>" target="_blank" rel="noopener">Code</a>
              <% } %>
              <a class="btn btn-sm btn-ghost" href="/projects/<%= project.slug %>">Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="opacity-70">No projects yet.</p>
  <% } %>
</section>

</main>

<%- include('partials/footer') %>
