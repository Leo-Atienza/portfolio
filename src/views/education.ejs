<!doctype html>
<html data-theme="cupcake">
<head>
  <meta charset="utf-8" />
  <title><%= title %> · Portfolio</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="Education history and coursework." />
  <link rel="icon" href="/favicon.ico" />
  <link rel="stylesheet" href="/css/main.css?v=<%= assetVersion %>" />
</head>
<body>
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">Education</h1>

    <% if (schools && schools.length) { %>
      <div class="grid gap-6 sm:grid-cols-2">
        <% schools.forEach(s => { %>
          <div class="card bg-base-100 shadow-md">
            <div class="card-body">
              <h2 class="card-title"><%= s.school %></h2>
              <% if (s.program) { %><p class="opacity-80"><%= s.program %></p><% } %>
              <p class="text-sm opacity-70">
                <%= [s.location, s.start && s.end ? (s.start + ' — ' + s.end) : (s.start || s.end || '')].filter(Boolean).join(' · ') %>
              </p>
              <% if (Array.isArray(s.details) && s.details.length) { %>
                <ul class="list-disc ml-5 mt-2">
                  <% s.details.forEach(d => { %><li><%= d %></li><% }) %>
                </ul>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="opacity-70">No education items yet. You can add them in <code>portfolioController.getEducation()</code>.</p>
    <% } %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>