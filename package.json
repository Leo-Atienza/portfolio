{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "My portfolio",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run tw:build\" \"node server.js\"",
    "tw:build": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/main.css --watch",
    "tw:prod": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/main.css --minify",
    "seed": "node seed.js",
    "migrate": "node migrate.js",
    "build": "npm run tw:prod"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "daisyui": "^4.12.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
